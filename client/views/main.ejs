<!DOCTYPE html>
<html>
  <head>
    <title>Votes</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" media="all" rel="stylesheet" />
    <link href="/css/custom.css" media="all" rel="stylesheet" />
  </head>
  <body>
    <input type="hidden" id='admin_view' value="<%= admin %>" />
    <input type="hidden" id='api_url' value="<%= api_url %>" />
    <div class='container start-page'>
      <div id="candidates-list" class="row">
      </div>
      <% if(admin) { %>
        <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#add_candidate">
          Add Candidate
        </button>
      <% } %>
    </div>

    <% if(admin) { %>
      <!-- Modal add new candidate -->
      <div class="modal fade" id="add_candidate">
        <div class="modal-dialog">
          <form role="form">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Add Candidate</h4>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <label for="candidate_name">Name</label>
                  <input type="text" class="form-control" id="input_candidate_name">
                </div>
                <div class="form-group">
                  <label for="candidate_url">Image URL</label>
                  <input type="text" class="form-control" id="input_candidate_url">
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" id="cancel_candidate" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="save_candidate">Save</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    <% } %>
    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
